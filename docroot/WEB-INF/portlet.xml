<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>pidAdmin-portlet</portlet-name>
		<display-name>pidAdmin-portlet</display-name>
		<portlet-class>it.infn.ct.pidAdmin_portlet</portlet-class>
		<!--
                     Application init parameters
                -->
                <init-param>
        		<name>gridOperationDesc</name>
        		<value>pidAdmin description</value>
		</init-param>
		<init-param>
                        <name>portletVersion</name>
                        <value>1.0</value>
                </init-param>
                <init-param>
                        <name>logLevel</name>
                        <value>info</value>
                </init-param>
		<init-param>
                        <name>gridOperationId</name>
                        <value>15</value>
                </init-param>
                <!--
                     Infrastructure parameters can be specified prefixing
                     the name with the infrastructure number: n_<property>
                -->
                <init-param>
                        <name>numInfrastructures</name>
                        <value>1</value>
                </init-param>
                <!--
                     Infrastructure #1
                -->

         	<init-param>
            		<name>1_nameInfrastructure</name>
            		<value>GridIt Italian Grid Infrastructure</value>
         	</init-param>
		<init-param>             
			<name>1_acronymInfrastructure</name>
			<value>GridIt</value>
		</init-param>
		<init-param>    
			<name>1_bdiiHost</name>
			<value>ldap://egee-bdii.cnaf.infn.it:2170</value>
		</init-param>
        	<init-param>
            		<name>1_enableInfrastructure</name>
            		<value>yes</value>
        	</init-param>
		<init-param>    
			<name>1_wmsHosts</name>
			<value></value>
		</init-param>
		<init-param>
			<name>1_pxServerHost</name>
			<value>etokenserver.ct.infn.it</value>
		</init-param>
		<init-param>
			<name>1_pxServerPort</name>
			<value>8082</value>
			</init-param>
		<init-param>
			<name>1_pxServerSecure</name>
			<value>true</value>
		</init-param>
		<init-param>
			<name>1_pxRobotId</name>
			<value>332576f78a4fe70a52048043e90cd11f</value>
		</init-param>
		<init-param>
			<name>1_pxRobotVO</name>
			<value>gridit</value>
		</init-param>
		<init-param>
			<name>1_pxRobotRole</name>
			<value>gridit</value>
		</init-param>
		<init-param>
			<name>1_pxRobotRenewalFlag</name>
			<value>true</value>
		</init-param>
        <init-param>
            <name>1_softwareTags</name>
            <value></value>
        </init-param>		
		<init-param>
			<name>sciGwyUserTrackingDB_Hostname</name>
			<value>localhost</value>
		</init-param>
		<init-param>
			<name>sciGwyUserTrackingDB_Username</name>
			<value>tracking_user</value>
		</init-param>
		<init-param>
			<name>sciGwyUserTrackingDB_Password</name>
			<value>usertracking</value>
		</init-param>
		<init-param>
			<name>sciGwyUserTrackingDB_Database</name>
			<value>userstracking</value>
		</init-param>
		<init-param>    
			<name>jobRequirements</name>
			<value></value>
		</init-param>            
		<init-param>    
			<name>pilotScript</name>
			<value>pilot_script.sh</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>pidAdmin-portlet</title>
			<short-title>pidAdmin-portlet</short-title>
			<keywords>pidAdmin-portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>
